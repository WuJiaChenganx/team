<?teamWeb.xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="teamWeb.research.mapper.TextboxInfoMapper">
    <select id="getProject" resultType="teamWeb.research.entity.TextboxInfo">
        select `id`,`text`,`sDate`,`eDate`,`tClass`
        from textbox
        <where>
            tClass = 5
        </where>
        order by sDate desc limit ${start},${end}
    </select>

    <select id="getProjected" resultType="teamWeb.research.entity.TextboxInfo">
        select `id`,`text`,`sDate`,`eDate`,`tClass`
        from textbox
        <where>
            tClass = 6
        </where>
        order by sDate desc limit ${start},${end}
    </select>

    <select id="getDire" resultType="teamWeb.research.entity.TextboxInfo">
        select `id`,`text`,`pictureUrl`,`tClass`
        from textbox
        <where>
            tClass = 7
        </where>
        limit ${start},${end}
    </select>

    <select id="getPlatform" resultType="teamWeb.research.entity.TextboxInfo">
        select `id`,`text`,`pictureUrl`,`tClass`
        from textbox
        <where>
            tClass = 2
        </where>
        limit ${start},${end}
    </select>

    <select id="getTeach" resultType="teamWeb.research.entity.TextboxInfo">
        select `id`,`text`,`pictureUrl`,`tClass`
        from textbox
        <where>
            tClass = 3
        </where>
        limit ${start},${end}
    </select>

    <select id="getBrief" resultType="teamWeb.research.entity.TextboxInfo">
        select `id`,`text`,`pictureUrl`,`tClass`
        from textbox
        <where>
            tClass = 4
        </where>
    </select>



    <select id="getEmulation" resultType="teamWeb.research.entity.TextboxInfo">
        select `id`,`text`,`fileUrl`,`tClass`
        from textbox
        <where>
            tClass = 1
        </where>
    </select>

    <select id="getRelation" resultType="teamWeb.homepage.entity.RelationInfo">
        select *
        from relation
    </select>

    <select id="getText" resultType="teamWeb.research.entity.TextboxInfo">
        select * from textbox
        <where>
            id =${id}
        </where>
    </select>

    <insert id="insertInfo">
        INSERT INTO textbox(`title`, `text`,`fileUrl`,`tClass`,`pictureUrl`,`sDate`,`eDate`) VALUES ("${title}", "${text}","${fileUrl}","${tClass}","${pictureUrl}","${sDate}","${eDate}")
    </insert>
</mapper>