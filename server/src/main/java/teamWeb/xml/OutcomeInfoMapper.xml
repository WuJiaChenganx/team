<?teamWeb.xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="teamWeb.pubications.mapper.OutcomeInfoMapper">
    <select id="getPaperDetail" resultType="teamWeb.pubications.entity.OutcomeInfo">
        select `id`,`title`,`author`,`date`,`perio`,`url`,`pictureUrl`,`pClass`
        from outcome
        <where>
            pClass = 0
        </where>
        order by date desc limit ${start},${end}
    </select>

    <select id="getPatentDetail" resultType="teamWeb.pubications.entity.OutcomeInfo">
        select `id`,`title`,`date`,`proposer`,`inventor`,`authorization`,`pClass`
        from outcome
        <where>
            pClass = 1
        </where>
        order by date desc limit ${start},${end}
    </select>

    <select id="getMonographDetail" resultType="teamWeb.pubications.entity.OutcomeInfo">
        select `id`,`title`,`date`,`author`,`pub`,`pictureUrl`,`pClass`
        from outcome
        <where>
            pClass = 2
        </where>
        order by date desc limit ${start},${end}
    </select>

    <select id="getOutcome" resultType="teamWeb.pubications.entity.OutcomeInfo">
        select *
        from outcome
        <where>
            id = ${id}
        </where>
    </select>

    <insert id="insertInfo">
        INSERT INTO outcome(`title`, `author`,`date`,`perio`,`url`,`proposer`,`inventor`,`authorization`,`pub`,`pictureUrl`,`pClass`) VALUES ("${title}", "${author}","${date}","${perio}","${url}","${proposer}","${inventor}","${authorization}","${pub}","${pictureUrl}","${pClass}")
    </insert>


</mapper>