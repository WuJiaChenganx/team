<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="teamWeb.mapper.ReportInfoMapper">
    <select id="teamDynamic" resultType="teamWeb.entity.ReportInfo">
        select
        `id`,`title`,`date`,`text`,`pictureUrl`,`rClass`
        from report
        <where>
            `rClass`= 1
        </where>
        order by date desc limit ${start},${end}
    </select>

    <select id="notice" resultType="teamWeb.entity.ReportInfo">
        select
        `id`,`title`,`date`,`text`,`rClass`
        from report
        <where>
            `rClass`= 0
        </where>
        order by date desc limit ${start},${end}
    </select>

    <select id="media" resultType="teamWeb.entity.ReportInfo">
        select
        `id`,`title`,`date`,`url`,`rClass`
        from report
        <where>
            `rClass`= 2
        </where>
        order by date desc limit ${start},${end}
    </select>

    <select id="consult" resultType="teamWeb.entity.ReportInfo">
        select
        `id`,`title`,`date`,`url`,`rClass`
        from report
        <where>
            `rClass`= 3
        </where>
        order by date desc limit ${start},${end}
    </select>

    <select id="getReport" resultType="teamWeb.entity.ReportInfo">
        select
        `id`,`url`,`rClass`
        from report
        <where>
            `rClass`= 4
        </where>
        limit ${start},${end}
    </select>

    <select id="getNewsDetail" resultType="teamWeb.entity.ReportInfo">
        select
        `id`,`title`,`date`,`url`,`rClass`
        from report
        <where>
            `rClass`= 2
        </where>
        order  by date desc limit ${start},${end}
    </select>
    <select id="allNews" resultType="teamWeb.entity.ReportInfo">
        select
        *
        from report
        order  by date desc limit ${start},${end}
    </select>

    <select id="getNews" resultType="teamWeb.entity.ReportInfo">
        select *
        from report
        <where>
            id = ${id}
        </where>
    </select>
    <insert id="insertInfo">
        INSERT INTO report(`title`, `date`, `text`, `url`, `pictureurl`) VALUES ("${title}","${date}","${text}","${url}","${pictureUrl}")
    </insert>
    <update id="updateInfo">
        update report

    </update>

    <delete id="delete">
        delete from report
        <where>
            `id`=${id}
        </where>
    </delete>


</mapper>