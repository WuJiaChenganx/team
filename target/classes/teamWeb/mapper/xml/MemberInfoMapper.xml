<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="teamWeb.mapper.MemberInfoMapper">
    <select id="getMember" resultType="teamWeb.entity.MemberInfo">
        select `id`,`pictureUrl`,`edu`,`name`,`mClass`
        from member
        order by mClass,name limit ${start},${end}
    </select>

    <select id="getAllDetail" resultType="teamWeb.entity.MemberInfo">
        select *
        <where>
            name=${name}
        </where>
    </select>

    <select id="getHomeMember" resultType="teamWeb.entity.MemberInfo">
        select `id`,`pictureUrl`,`name`,`mClass`
        from member
        order by mClass,name limit ${start},${end}
    </select>
</mapper>